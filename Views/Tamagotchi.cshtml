<h1>@Model.GetName()</h1>
@if(Model.GetDead() == true){
  <p>your tamagotchi is dead</p>
}
else{
  <p>@Model.GetHunger()</p>
  <p>@Model.GetTiredness()</p>
  <p>@Model.GetEntertainment()</p>
}


<form action="/TamagotchiFeed/@Model.GetName()" method="post">
  <button type="click">feed</button>
</form>
<form action="/TamagotchiSleep/@Model.GetName()" method="post">
  <button type="click">sleep</button>
</form>
<form action="/TamagotchiPlay/@Model.GetName()" method="post">
  <button type="click">Play</button>
</form>


<a href='/Tamagotchis/new'>Add another Tamagotchi</a>
<a href="/Tamagotchis">View all Tamagotchis</a>
